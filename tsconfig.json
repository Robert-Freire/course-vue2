{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "es2015",
            "es2015.promise"
        ],

        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "webpack-env"
        ],
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "typings/index",
        "typings/index.d.ts"
    ]
}